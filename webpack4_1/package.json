{
  "name": "Webpack",
  "version": "1.0",
  "description": "webpack and react practice flow form :https://fakefish.github.io/react-webpack-cookbook/Getting-started.html",
  "main": "index.js",
  "author": "Lee",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack -p",
    "start": "webpack-dev-server --watch --colors",
    "test": "node src/index.js",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "format": "prettier --single-quote  --trailing-comma \"all\" --write \"src/**/*.{js,jsx}\""
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/node": "7.2.2",
    "babel-loader": "8.0.5",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "html-webpack-plugin": "3.2.0",
    "eslint": "5.15.3",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "prettier": "1.17.0",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.3.1"
  },
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-route": "1.0.3"
  },
  "husky":{
    "hooks":{
      "pre-commit":"lint-staged"
    }
  },
  "lint-staged":{
    "src/**/*.{js,jsx,json,css,md}":[
      "yarn format",
      "git add"
    ],
    "src/**/*.{js,jsx}":"yarn lint"
  }
}
